<mvc:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:form="sap.ui.layout.form" 
	xmlns:layout="sap.ui.layout" 
	xmlns="sap.m"
	controllerName="controller.S0">
	<SplitApp mode="PopoverMode">
		<masterPages>
			<Page title="Ordens (2)">
				<content>
					<List>
						<headerToolbar>
							<Toolbar >
								<content>
									<SearchField placeholder="Número da Ordem"/>
								</content>
							</Toolbar>
						</headerToolbar>
						<items>
							<ObjectListItem 
								type="Active" 
								title="Cliente A"
								number="4214" 
								numberUnit="eur" 
								intro="4501" 
								selected="true" 
								numberState="Success">
								<attributes>
									<ObjectAttribute 
									text="Realizado" 
									title="Pagamento"/>
								</attributes>
							</ObjectListItem>
							<ObjectListItem 
								type="Active" 
								title="Cliente B" 
								number="5030,49" 
								numberUnit="usd" 
								intro="4502" 
								markFlagged="true" 
								
								showMarkers="true"
								numberState="Warning">
								<attributes>
									<ObjectAttribute text="Pendente" title="Pagamento"/>
								</attributes>
							</ObjectListItem>
						</items>
					</List>
				</content>
				<footer>
					<Toolbar >
						<content>
							<ToolbarSpacer/>
							<Button icon="sap-icon://filter"/>
						</content>
					</Toolbar>
				</footer>
			</Page>
		</masterPages>
		<detailPages>
			<Page title="Detalhes">
				<content>
					<IconTabBar >
						<items>
							<IconTabFilter icon="sap-icon://money-bills" text="Valores">
								<content>
									<form:Form >
										<form:layout>
											<form:ResponsiveGridLayout 
												labelSpanL="2" 
												labelSpanM="3" 
												emptySpanL="2" 
												emptySpanM="1" 
												columnsL="2" 
												columnsM="1"/>
										</form:layout>
										<form:formContainers>
											<form:FormContainer title="Title">
												<form:formElements>
													<form:FormElement label="Label A">
														<form:fields>
															<Input/>
														</form:fields>
													</form:FormElement>
													<form:FormElement label="Label B">
														<form:fields>
															<Input>
																<layoutData>
																	<layout:GridData span="L4 M5 S4"/>
																</layoutData>
															</Input>
															<Input>
																<layoutData>
																	<layout:GridData span="L4 M3 S4"/>
																</layoutData>
															</Input>
														</form:fields>
													</form:FormElement>
													<form:FormElement label="Label C">
														<form:fields>
															<Slider/>
															<RadioButtonGroup>
																<buttons>
																	<RadioButton text="Opção A"/>
																	<RadioButton text="Opção B"/>
																	<RadioButton text="Opção C"/>
																</buttons>
															</RadioButtonGroup>
														</form:fields>
													</form:FormElement>
												</form:formElements>
											</form:FormContainer>
										</form:formContainers>
									</form:Form>
								</content>
							</IconTabFilter>
							<IconTabSeparator />
							<IconTabFilter text="Itens" count="10" icon="sap-icon://task" iconColor="Critical">
								<content>
									<List>
										<items>
											<StandardListItem title="List Item 1"/>
											<StandardListItem title="List Item 2"/>
											<StandardListItem title="List Item 3"/>
										</items>
									</List>
								</content>
							</IconTabFilter>
							<IconTabFilter text="Remessas" count="5" icon="sap-icon://shipping-status" iconColor="Positive"/>
						</items>
					</IconTabBar>
				</content>
			</Page>
		</detailPages>
	</SplitApp>
</mvc:View>